
<h2>Espresso</h2>

<ul>
<% @espressos.each do |espresso| %>
    <li>
    <a href="/espressos/<%= espresso.id %>"><%= espresso.name %> - <%= espresso.brand %> - <% espresso.grind_size %> - <%= espresso.dose %> - <%= espresso.extraction_volume %> - <%= espresso.extraction_time %></a>
    </li>
    <% end %>
</ul>

